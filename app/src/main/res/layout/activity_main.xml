<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <EditText
            android:id="@+id/usernameField"
            android:layout_width="376dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter your username"
            android:ems="10"
            tools:layout_editor_absoluteY="85dp" android:id="@+id/editText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="74dp"
            android:layout_alignParentTop="true"/>
    <EditText
            android:id="@+id/mailField"
            android:layout_width="369dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Enter you mail"
            android:ems="10"
            tools:layout_editor_absoluteY="148dp" android:id="@+id/editText2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_alignParentBottom="true"
            android:layout_marginBottom="334dp"/>
    <EditText
            android:id="@+id/firstPasswordField"
            android:text="password"
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="217dp" android:id="@+id/editText3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="185dp"
            android:layout_alignParentTop="true" android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"/>
    <EditText
            android:id="@+id/secondPasswordField"
            android:text="password"
            android:layout_width="374dp"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            tools:layout_editor_absoluteY="285dp" android:id="@+id/editText4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_alignParentBottom="true" android:layout_marginBottom="221dp"/>
    <Button
            android:id="@+id/Button1"
            android:text="REGISTER"
            android:layout_width="366dp"
            android:layout_height="wrap_content" android:id="@+id/button"
            tools:layout_editor_absoluteY="353dp" tools:layout_editor_absoluteX="84dp"
            android:layout_alignParentBottom="true" android:layout_alignStart="@+id/editText"
            android:layout_marginBottom="153dp" android:layout_marginStart="0dp"/>

</RelativeLayout>